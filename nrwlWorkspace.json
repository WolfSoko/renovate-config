{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "groupName": "Nrwl workspace",
      "matchManagers": ["npm"],
      "matchPackagePatterns": ["^cypress$", "^jest", "^ts-jest"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "groupName": "Nrwl workspace",
      "matchManagers": ["npm"],
      "matchPackagePatterns": ["^@nrwl/"],
      "excludePackagePatterns": ["^@nrwl/workspace$"],
      "enabled": false
    },
    {
      "groupName": "Nrwl workspace",
      "matchManagers": ["npm"],
      "matchPackageNames": ["@nrwl/workspace"],
      "postUpgradeTasks": {
        "commands": [
          "npm ci --ignore-scripts",
          "npx nx migrate latest --from={{{depName}}}@{{{replace '^[^\\d]*' '' currentValue}}}",
          "npx nx migrate --run-migrations=migrations.json || true",
          "rm -f migrations.json || true",
          "npx nx workspace-lint",
          "npx nx run-many --target=lint --all --parallel --fix --skip-nx-cache"
        ],
        "fileFilters": ["**/**"]
      }
    }
  ]
}
