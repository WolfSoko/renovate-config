{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "groupName": "client tooling",
      "matchManagers": ["npm"],
      "matchPackagePatterns": ["^eslint", "^@angular-eslint/", "^@typescript-eslint/", "^prettier"],
      "postUpgradeTasks": {
        "commands": [
          "npm ci --ignore-scripts",
          "npx nx workspace-lint",
          "npx nx run-many --target=lint --all --parallel --fix --skip-nx-cache"
        ],
        "fileFilters": ["**/**"]
      }
    }
  ]
}
