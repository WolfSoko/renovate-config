{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "groupName": "Angular workspace",
      "matchManagers": ["npm"],
      "matchPackagePatterns": ["^tslib", "^ts-node", "^zone\\.js"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "groupName": "Angular workspace",
      "matchManagers": ["npm"],
      "matchPackagePatterns": ["^rxjs"],
      "matchUpdateTypes": ["major", "minor"],
      "enabled": false
    },
    {
      "groupName": "Angular workspace",
      "matchManagers": ["npm"],
      "matchPackagePatterns": ["^typescript"],
      "allowedVersions": "< 4.3.0"
    },
    {
      "groupName": "Angular workspace",
      "matchManagers": ["npm"],
      "matchPackagePatterns": ["^@angular/", "^@angular-devkit/", "^@ngrx/", "^ng-packagr", "^tslib", "^ts-node", "^zone\\.js"],
      "excludePackagePatterns": ["^@angular/(?:core|cli)$", "^@ngrx/store$"]
    },
    {
      "groupName": "Angular workspace",
      "matchManagers": ["npm"],
      "matchPackageNames": ["@angular/core", "@angular/cli", "@angular/cdk", "@angular/material", "@ngrx/store", "@ngrx/component-store"],
      "postUpgradeTasks": {
        "commands": [
          "npm ci --ignore-scripts",
          "npm run prepare --if-present",
          "npx --no-install ng update {{{depName}}} --from={{{replace '^[^\\d]*' '' currentValue}}} --to={{{replace '^[^\\d]*' '' newValue}}} --migrate-only --allow-dirty --force",
          "npm run format --if-present"
        ],
        "fileFilters": ["**/**"]
      }
    }
  ]
}
